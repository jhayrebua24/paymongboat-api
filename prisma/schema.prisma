// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
  binaryTargets   = ["native", "linux-arm64-openssl-1.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum CanalTypes {
  small
  medium
  large
}

enum CanalDiretions {
  northbound
  southbound
  nortbound_southbound
}

enum ShipType {
  off_shore
  container
  bulk_carriers
}

model Canals {
  id        Int            @id @default(autoincrement())
  name      String         @unique
  size      CanalTypes     @default(small)
  length    Float          @default(0) @db.Double
  is_close  Boolean        @default(false)
  direction CanalDiretions @default(nortbound_southbound)
  ships     Ships[]
}

model Ships {
  id       Int      @id @default(autoincrement())
  canal_id Int
  name     String   @unique
  type     ShipType @default(off_shore)
  Canals   Canals?  @relation(fields: [canal_id], references: [id])
}
